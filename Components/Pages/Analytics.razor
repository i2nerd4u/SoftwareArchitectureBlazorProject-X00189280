@code {
    bool isLoading = true;
    int totalCharacters = 0;
    int totalEpisodes = 0;
    int aliveCount = 0;
    int deadCount = 0;
    int unknownCount = 0;
    int uniqueOrigins = 0;
    int uniqueSpecies = 0;
    double avgEpisodesPerCharacter = 0;
    string mostCommonOrigin = "";

    List<Character> characters = new();
    List<KeyValuePair<string, int>> topSpecies = new();
    List<KeyValuePair<string, int>> topOrigins = new();
    List<KeyValuePair<string, int>> genderDistribution = new();
    List<CharacterStats> mostFeatured = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAnalytics();
        isLoading = false;
    }

    private async Task LoadAnalytics()
    {
        string? url = "https://rickandmortyapi.com/api/character";

        while (!string.IsNullOrEmpty(url))
        {
            try
            {
                var response = await Http.GetFromJsonAsync<CharacterResponse>(url);
                if (response?.Results != null)
                {
                    characters.AddRange(response.Results);
                    url = response.Info?.Next;
                }
                else break;
            }
            catch { break; }
        }

        totalCharacters = characters.Count;
        aliveCount = characters.Count(c => c.Status.Equals("Alive", StringComparison.OrdinalIgnoreCase));
        deadCount = characters.Count(c => c.Status.Equals("Dead", StringComparison.OrdinalIgnoreCase));
        unknownCount = characters.Count(c => c.Status.Equals("unknown", StringComparison.OrdinalIgnoreCase));

        avgEpisodesPerCharacter = characters.Any() ? Math.Round(characters.Average(c => c.Episode.Count), 1) : 0;

        uniqueOrigins = characters.Select(c => c.Origin?.Name ?? "Unknown").Distinct().Count();
        uniqueSpecies = characters.Select(c => c.Species).Distinct().Count();

        topSpecies = characters
            .GroupBy(c => c.Species)
            .Select(g => new KeyValuePair<string, int>(g.Key, g.Count()))
            .OrderByDescending(x => x.Value)
            .ToList();

        topOrigins = characters
            .GroupBy(c => c.Origin?.Name ?? "Unknown")
            .Select(g => new KeyValuePair<string, int>(g.Key, g.Count()))
            .OrderByDescending(x => x.Value)
            .ToList();

        genderDistribution = characters
            .GroupBy(c => c.Gender)
            .Select(g => new KeyValuePair<string, int>(g.Key, g.Count()))
            .OrderByDescending(x => x.Value)
            .ToList();

        mostCommonOrigin = characters
            .GroupBy(c => c.Origin?.Name ?? "Unknown")
            .OrderByDescending(g => g.Count())
            .FirstOrDefault()?.Key ?? "Unknown";

        mostFeatured = characters
            .Select(c => new CharacterStats
            {
                Name = c.Name,
                Image = c.Image,
                Status = c.Status,
                EpisodeCount = c.Episode.Count
            })
            .OrderByDescending(c => c.EpisodeCount)
            .ToList();

        var episodeResponse = await Http.GetFromJsonAsync<EpisodeResponse>("https://rickandmortyapi.com/api/episode");
        totalEpisodes = episodeResponse?.Info?.Count ?? 0;
    }

    public class Character
    {
        [JsonPropertyName("id")] public int Id { get; set; }
        [JsonPropertyName("name")] public string Name { get; set; } = "";
        [JsonPropertyName("status")] public string Status { get; set; } = "";
        [JsonPropertyName("species")] public string Species { get; set; } = "";
        [JsonPropertyName("gender")] public string Gender { get; set; } = "";
        [JsonPropertyName("image")] public string Image { get; set; } = "";
        [JsonPropertyName("origin")] public Origin? Origin { get; set; }
        [JsonPropertyName("episode")] public List<string> Episode { get; set; } = new();
    }

    public class Origin
    {
        [JsonPropertyName("name")] public string Name { get; set; } = "";
    }

    public class CharacterResponse
    {
        [JsonPropertyName("info")] public Info? Info { get; set; }
        [JsonPropertyName("results")] public List<Character> Results { get; set; } = new();
    }

    public class EpisodeResponse
    {
        [JsonPropertyName("info")] public Info? Info { get; set; }
    }

    public class Info
    {
        [JsonPropertyName("count")] public int Count { get; set; }
        [JsonPropertyName("next")] public string? Next { get; set; }
    }

    public class CharacterStats
    {
        public string Name { get; set; } = "";
        public string Image { get; set; } = "";
        public string Status { get; set; } = "";
        public int EpisodeCount { get; set; }
    }
}
