@page "/Analytics"
@inject HttpClient Http
@using System.Text.Json.Serialization

<div class="hero-header">
    <h1 class="hero-title">Rick and Morty Analytics</h1>
    <p class="hero-subtitle">Data-driven insights from the multiverse</p>
</div>

@if (isLoading)
{
    <div class="loading">Analyzing multiverse data...</div>
}
else
{
    <div class="stats-grid">
        <div class="stat-card primary">
            <div class="stat-icon">üë•</div>
            <div class="stat-content">
                <div class="stat-value">@totalCharacters</div>
                <div class="stat-label">Total Characters</div>
            </div>
        </div>

        <div class="stat-card success">
            <div class="stat-icon">üíö</div>
            <div class="stat-content">
                <div class="stat-value">@aliveCount</div>
                <div class="stat-label">Alive Characters</div>
            </div>
        </div>

        <div class="stat-card danger">
            <div class="stat-icon">üíÄ</div>
            <div class="stat-content">
                <div class="stat-value">@deadCount</div>
                <div class="stat-label">Dead Characters</div>
            </div>
        </div>

        <div class="stat-card warning">
            <div class="stat-icon">üì∫</div>
            <div class="stat-content">
                <div class="stat-value">@totalEpisodes</div>
                <div class="stat-label">Total Episodes</div>
            </div>
        </div>

        <div class="stat-card info">
            <div class="stat-icon">üåç</div>
            <div class="stat-content">
                <div class="stat-value">@uniqueOrigins</div>
                <div class="stat-label">Unique Origins</div>
            </div>
        </div>

        <div class="stat-card purple">
            <div class="stat-icon">üß¨</div>
            <div class="stat-content">
                <div class="stat-value">@uniqueSpecies</div>
                <div class="stat-label">Species Types</div>
            </div>
        </div>
    </div>

    <div class="analysis-grid">
        <div class="analysis-card">
            <h3 class="card-title">Species Distribution</h3>
            <div class="species-list">
                @foreach (var species in topSpecies.Take(10))
                {
                    <div class="species-item">
                        <div class="species-info">
                            <span class="species-name">@species.Key</span>
                            <span class="species-count">@species.Value</span>
                        </div>
                        <div class="species-bar">
                            <div class="species-fill" style="width: @(species.Value * 100.0 / topSpecies.First().Value)%"></div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="analysis-card">
            <h3 class="card-title">Most Featured Characters</h3>
            <div class="featured-list">
                @foreach (var character in mostFeatured.Take(10))
                {
                    <div class="featured-item">
                        <img src="@character.Image" alt="@character.Name" class="featured-avatar" />
                        <div class="featured-info">
                            <div class="featured-name">@character.Name</div>
                            <div class="featured-episodes">@character.EpisodeCount episodes</div>
                        </div>
                        <div class="featured-badge">@character.Status</div>
                    </div>
                }
            </div>
        </div>

        <div class="analysis-card full-width">
            <h3 class="card-title">Gender Distribution</h3>
            <div class="gender-stats">
                @foreach (var gender in genderDistribution)
                {
                    <div class="gender-item">
                        <div class="gender-label">@gender.Key</div>
                        <div class="gender-bar-container">
                            <div class="gender-bar" style="width: @(gender.Value * 100.0 / totalCharacters)%">
                                <span class="gender-percentage">@gender.Value (@((gender.Value * 100.0 / totalCharacters).ToString("F1"))%)</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="analysis-card">
            <h3 class="card-title">Survival Rate</h3>
            <div class="survival-chart">
                <div class="pie-chart">
                    <div class="pie-segment alive" style="--percentage: @((aliveCount * 100.0 / totalCharacters).ToString("F1"))"></div>
                </div>
                <div class="survival-legend">
                    <div class="legend-item">
                        <span class="legend-color alive"></span>
                        <span>Alive: @((aliveCount * 100.0 / totalCharacters).ToString("F1"))%</span>
                    </div>
                    <div class="legend-item">
                        <span class="legend-color dead"></span>
                        <span>Dead: @((deadCount * 100.0 / totalCharacters).ToString("F1"))%</span>
                    </div>
                    <div class="legend-item">
                        <span class="legend-color unknown"></span>
                        <span>Unknown: @((unknownCount * 100.0 / totalCharacters).ToString("F1"))%</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="analysis-card">
            <h3 class="card-title">Fun Facts</h3>
            <div class="facts-list">
                <div class="fact-item">üé¨ Average episodes per character: <strong>@avgEpisodesPerCharacter</strong></div>
                <div class="fact-item">üåç Most common origin: <strong>@mostCommonOrigin</strong></div>
                <div class="fact-item">üë§ Most common species: <strong>@topSpecies.FirstOrDefault().Key</strong></div>
                <div class="fact-item">‚≠ê Character with most appearances: <strong>@mostFeatured.FirstOrDefault()?.Name</strong></div>
            </div>
        </div>

        <div class="analysis-card full-width">
            <h3 class="card-title">üåü Top 15 Most Popular Origins</h3>
            <div class="origin-chart">
                @foreach (var origin in topOrigins.Take(15))
                {
                    var percentage = (origin.Value * 100.0 / totalCharacters);
                    <div class="origin-row">
                        <div class="origin-info">
                            <span class="origin-name">@origin.Key</span>
                            <span class="origin-stats">@origin.Value characters (@percentage.ToString("F1")%)</span>
                        </div>
                        <div class="origin-bar-container">
                            <div class="origin-bar" style="width: @percentage%">
                                <span class="bar-label">@origin.Value</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="analysis-card full-width">
            <h3 class="card-title">üî¨ Species Analysis Matrix</h3>
            <div class="species-matrix">
                @foreach (var species in topSpecies.Take(12))
                {
                    var speciesChars = characters.Where(c => c.Species == species.Key).ToList();
                    var aliveCount = speciesChars.Count(c => c.Status.Equals("Alive", StringComparison.OrdinalIgnoreCase));
                    var deadCount = speciesChars.Count(c => c.Status.Equals("Dead", StringComparison.OrdinalIgnoreCase));
                    var unknownCount = species.Value - aliveCount - deadCount;
                    
                    <div class="species-card">
                        <div class="species-header">
                            <div class="species-name">@species.Key</div>
                            <div class="species-total">@species.Value</div>
                        </div>
                        <div class="species-breakdown">
                            <div class="breakdown-item alive" style="width: @((aliveCount * 100.0 / species.Value))%">
                                @if (aliveCount > 0) { <span>@aliveCount</span> }
                            </div>
                            <div class="breakdown-item dead" style="width: @((deadCount * 100.0 / species.Value))%">
                                @if (deadCount > 0) { <span>@deadCount</span> }
                            </div>
                            <div class="breakdown-item unknown" style="width: @((unknownCount * 100.0 / species.Value))%">
                                @if (unknownCount > 0) { <span>@unknownCount</span> }
                            </div>
                        </div>
                        <div class="species-legend">
                            <span class="legend-dot alive"></span>Alive
                            <span class="legend-dot dead"></span>Dead
                            <span class="legend-dot unknown"></span>Unknown
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

