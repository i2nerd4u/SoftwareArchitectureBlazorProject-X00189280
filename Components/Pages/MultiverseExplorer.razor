@page "/Multiverse"
@inject HttpClient Http
@using System.Text.Json.Serialization

<div class="hero-header">
    <h1 class="hero-title">üåå Multiverse Explorer</h1>
    <p class="hero-subtitle">Deep dive into character origins, locations, and dimensional analysis</p>
</div>

@if (isLoading)
{
    <div class="loading">
        <div class="loading-spinner"></div>
        <p>Scanning the multiverse...</p>
    </div>
}
else
{
    <div class="dashboard-grid">
        <div class="metric-card gradient-1">
            <div class="metric-icon">üåç</div>
            <div class="metric-content">
                <div class="metric-value">@uniqueOrigins</div>
                <div class="metric-label">Unique Origins</div>
            </div>
        </div>

        <div class="metric-card gradient-2">
            <div class="metric-icon">üìç</div>
            <div class="metric-content">
                <div class="metric-value">@uniqueLocations</div>
                <div class="metric-label">Known Locations</div>
            </div>
        </div>

        <div class="metric-card gradient-3">
            <div class="metric-icon">üß¨</div>
            <div class="metric-content">
                <div class="metric-value">@uniqueSpecies</div>
                <div class="metric-label">Species Types</div>
            </div>
        </div>

        <div class="metric-card gradient-4">
            <div class="metric-icon">‚≠ê</div>
            <div class="metric-content">
                <div class="metric-value">@Math.Round(avgAppearances, 1)</div>
                <div class="metric-label">Avg Appearances</div>
            </div>
        </div>
    </div>

    <div class="explorer-grid">
        <div class="explorer-card full-width">
            <h3 class="card-title">üåü Top 15 Most Popular Origins</h3>
            <div class="origin-chart">
                @foreach (var origin in topOrigins.Take(15))
                {
                    var percentage = (origin.Value * 100.0 / totalCharacters);
                    <div class="origin-row">
                        <div class="origin-info">
                            <span class="origin-name">@origin.Key</span>
                            <span class="origin-stats">@origin.Value characters (@percentage.ToString("F1")%)</span>
                        </div>
                        <div class="origin-bar-container">
                            <div class="origin-bar" style="width: @percentage%">
                                <span class="bar-label">@origin.Value</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="explorer-card">
            <h3 class="card-title">üèÜ Episode Legends</h3>
            <p class="card-subtitle">Characters with 20+ episode appearances</p>
            <div class="legends-grid">
                @foreach (var character in episodeLegends)
                {
                    <div class="legend-card">
                        <img src="@character.Image" alt="@character.Name" class="legend-avatar" />
                        <div class="legend-info">
                            <div class="legend-name">@character.Name</div>
                            <div class="legend-count">@character.EpisodeCount episodes</div>
                            <div class="legend-badge @character.Status.ToLower()">@character.Status</div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="explorer-card">
            <h3 class="card-title">üé≠ Character Diversity Index</h3>
            <div class="diversity-stats">
                <div class="diversity-item">
                    <div class="diversity-label">Species Diversity</div>
                    <div class="diversity-bar">
                        <div class="diversity-fill" style="width: @((uniqueSpecies / 50.0 * 100))%"></div>
                    </div>
                    <div class="diversity-value">@uniqueSpecies species</div>
                </div>
                <div class="diversity-item">
                    <div class="diversity-label">Origin Diversity</div>
                    <div class="diversity-bar">
                        <div class="diversity-fill" style="width: @((uniqueOrigins / 100.0 * 100))%"></div>
                    </div>
                    <div class="diversity-value">@uniqueOrigins origins</div>
                </div>
                <div class="diversity-item">
                    <div class="diversity-label">Gender Distribution</div>
                    <div class="diversity-bar">
                        <div class="diversity-fill" style="width: @((genderCount / 5.0 * 100))%"></div>
                    </div>
                    <div class="diversity-value">@genderCount categories</div>
                </div>
            </div>
        </div>

        <div class="explorer-card full-width">
            <h3 class="card-title">üî¨ Species Analysis Matrix</h3>
            <div class="species-matrix">
                @foreach (var species in topSpecies.Take(12))
                {
                    var aliveCount = characters.Count(c => c.Species == species.Key && c.Status.Equals("Alive", StringComparison.OrdinalIgnoreCase));
                    var deadCount = characters.Count(c => c.Species == species.Key && c.Status.Equals("Dead", StringComparison.OrdinalIgnoreCase));
                    var unknownCount = species.Value - aliveCount - deadCount;
                    
                    <div class="species-card">
                        <div class="species-header">
                            <div class="species-name">@species.Key</div>
                            <div class="species-total">@species.Value</div>
                        </div>
                        <div class="species-breakdown">
                            <div class="breakdown-item alive" style="width: @((aliveCount * 100.0 / species.Value))%">
                                @if (aliveCount > 0) { <span>@aliveCount</span> }
                            </div>
                            <div class="breakdown-item dead" style="width: @((deadCount * 100.0 / species.Value))%">
                                @if (deadCount > 0) { <span>@deadCount</span> }
                            </div>
                            <div class="breakdown-item unknown" style="width: @((unknownCount * 100.0 / species.Value))%">
                                @if (unknownCount > 0) { <span>@unknownCount</span> }
                            </div>
                        </div>
                        <div class="species-legend">
                            <span class="legend-dot alive"></span>Alive
                            <span class="legend-dot dead"></span>Dead
                            <span class="legend-dot unknown"></span>Unknown
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="explorer-card">
            <h3 class="card-title">üéØ Rare Characters</h3>
            <p class="card-subtitle">Characters with only 1 episode appearance</p>
            <div class="rare-list">
                @foreach (var character in rareCharacters.Take(10))
                {
                    <div class="rare-item">
                        <img src="@character.Image" alt="@character.Name" class="rare-avatar" />
                        <div class="rare-info">
                            <div class="rare-name">@character.Name</div>
                            <div class="rare-species">@character.Species</div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="explorer-card">
            <h3 class="card-title">üìä Multiverse Insights</h3>
            <div class="insights-list">
                <div class="insight-item">
                    <span class="insight-icon">üåü</span>
                    <div>
                        <div class="insight-title">Most Common Origin</div>
                        <div class="insight-value">@topOrigins.FirstOrDefault().Key</div>
                    </div>
                </div>
                <div class="insight-item">
                    <span class="insight-icon">üëΩ</span>
                    <div>
                        <div class="insight-title">Dominant Species</div>
                        <div class="insight-value">@topSpecies.FirstOrDefault().Key</div>
                    </div>
                </div>
                <div class="insight-item">
                    <span class="insight-icon">üíÄ</span>
                    <div>
                        <div class="insight-title">Mortality Rate</div>
                        <div class="insight-value">@((deadCount * 100.0 / totalCharacters).ToString("F1"))%</div>
                    </div>
                </div>
                <div class="insight-item">
                    <span class="insight-icon">üé¨</span>
                    <div>
                        <div class="insight-title">Most Featured</div>
                        <div class="insight-value">@episodeLegends.FirstOrDefault()?.Name</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

