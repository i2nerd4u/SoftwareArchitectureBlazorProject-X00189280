@page "/Locations"
@page "/Locations/{StatusFilter}"
@page "/Locations/{StatusFilter}/{Letter}"
@page "/Locations/species/{SpeciesFilter}"
@page "/Locations/gender/{GenderFilter}"
@page "/Locations/location/{LocationFilter}"
@inject HttpClient Http
@inject NavigationManager Navigation
@using System.Text.Json.Serialization

<div class="hero-header">
    <h1 class="hero-title">Characters by Location</h1>
    <p class="hero-subtitle">@filterMessage</p>
</div>

<div class="filter-container">
    <div class="filter-section">
        <h3 class="filter-title">Locations</h3>
        <div class="location-filters">
            @foreach (var location in availableLocations)
            {
                <a href="@($"/Locations/location/{location}")" class="location-btn @(LocationFilter == location ? "active" : "")">@location</a>
            }
            @if (!string.IsNullOrEmpty(LocationFilter))
            {
                <a href="/Locations" class="filter-btn clear">Clear Location</a>
            }
        </div>
    </div>
</div>

@if (filteredCharacters == null || !filteredCharacters.Any())
{
    <div class="no-results">
        <p>No characters found</p>
    </div>
}
else
{
    <div class="characters-grid">
        @foreach (var c in filteredCharacters)
        {
            <div class="character-card">
                <div class="character-image">
                    <img src="@c.Image" alt="@c.Name" />
                    <div class="status-badge @c.Status.ToLower()">@c.Status</div>
                </div>
                <div class="character-info">
                    <NavLink href="@($"/CharacterDetails/{c.Id}")" class="character-name">@c.Name</NavLink>
                    <p class="episode-count">@c.Episode.Count episodes</p>
                </div>
            </div>
        }
    </div>
}

