@code {
    [Parameter]
    public string? StatusFilter { get; set; }
    
    [Parameter]
    public string? Letter { get; set; }
    
    [Parameter]
    public string? SpeciesFilter { get; set; }
    
    [Parameter]
    public string? GenderFilter { get; set; }
    
    [Parameter]
    public string? LocationFilter { get; set; }

    List<Character> characters = new();
    List<Character> filteredCharacters = new();
    List<string> availableSpecies = new();
    List<string> availableGenders = new();
    string filterMessage = "Loading characters...";

    protected override async Task OnInitializedAsync()
    {
        if (characters.Any()) return;

        string? url = "https://rickandmortyapi.com/api/character";

        while (!string.IsNullOrEmpty(url))
        {
            try
            {
                var response = await Http.GetFromJsonAsync<CharacterSearchResponse>(url);
                if (response?.Results != null)
                {
                    characters.AddRange(response.Results);
                    url = response.Info?.Next;
                }
                else break;
            }
            catch { break; }
            await Task.Yield();
        }

        ApplyFilter();
    }

    protected override void OnParametersSet()
    {
        if (characters.Any())
        {
            ApplyFilter();
        }
    }

    private void ApplyFilter()
    {
        var isAllStatus = string.IsNullOrEmpty(StatusFilter) || StatusFilter.Equals("All", StringComparison.OrdinalIgnoreCase) || StatusFilter == "_";
        var hasLetter = !string.IsNullOrEmpty(Letter) && Letter != "_";
        var hasSpecies = !string.IsNullOrEmpty(SpeciesFilter) && SpeciesFilter != "_";
        var hasGender = !string.IsNullOrEmpty(GenderFilter) && GenderFilter != "_";
        
        filteredCharacters = characters
            .Where(c =>
                (isAllStatus || c.Status.Equals(StatusFilter, StringComparison.OrdinalIgnoreCase)) &&
                (!hasLetter || c.Name.StartsWith(Letter, StringComparison.OrdinalIgnoreCase)) &&
                (!hasSpecies || c.Species.Equals(SpeciesFilter, StringComparison.OrdinalIgnoreCase)) &&
                (!hasGender || c.Gender.Equals(GenderFilter, StringComparison.OrdinalIgnoreCase))
            )
            .ToList();

        if (!availableSpecies.Any())
        {
            availableSpecies = characters
                .Select(c => c.Species)
                .Where(s => !string.IsNullOrEmpty(s))
                .Distinct()
                .OrderBy(s => s)
                .ToList();
                
            availableGenders = characters
                .Select(c => c.Gender)
                .Where(g => !string.IsNullOrEmpty(g))
                .Distinct()
                .OrderBy(g => g)
                .ToList();
        }

        filterMessage = $"Found {filteredCharacters.Count} characters";
    }

    private string BuildUrl(string? status, string? letter, string? species, string? gender)
    {
        status = string.IsNullOrEmpty(status) ? "All" : status;
        letter = string.IsNullOrEmpty(letter) ? "_" : letter;
        species = string.IsNullOrEmpty(species) ? "_" : species;
        gender = string.IsNullOrEmpty(gender) ? "_" : gender;
        return $"/Characters/{status}/{letter}/{species}/{gender}";
    }

    public class Character
    {
        [JsonPropertyName("id")] public int Id { get; set; }
        [JsonPropertyName("name")] public string Name { get; set; } = "";
        [JsonPropertyName("status")] public string Status { get; set; } = "";
        [JsonPropertyName("species")] public string Species { get; set; } = "";
        [JsonPropertyName("gender")] public string Gender { get; set; } = "";
        [JsonPropertyName("image")] public string Image { get; set; } = "";
        [JsonPropertyName("episode")] public List<string> Episode { get; set; } = new();
        
        private CharacterLocation? _location;
        [JsonPropertyName("location")] 
        public CharacterLocation? LocationObj 
        { 
            get => _location; 
            set { _location = value; Location = value?.Name ?? ""; } 
        }
        
        [JsonIgnore]
        public string Location { get; set; } = "";
    }
    
    public class CharacterLocation
    {
        [JsonPropertyName("name")] public string Name { get; set; } = "";
    }

    public class CharacterSearchResponse
    {
        [JsonPropertyName("info")] public CharacterInfo Info { get; set; } = new();
        [JsonPropertyName("results")] public List<Character> Results { get; set; } = new();
    }

    public class CharacterInfo
    {
        [JsonPropertyName("next")] public string? Next { get; set; }
    }
}
