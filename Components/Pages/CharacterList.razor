@page "/Characters"
@page "/Characters/{StatusFilter}/{Letter}/{SpeciesFilter}/{GenderFilter}"
@inject HttpClient Http
@inject NavigationManager Navigation
@using System.Text.Json.Serialization

<div class="hero-header">
    <h1 class="hero-title">Rick and Morty Characters </h1>
    <p class="hero-subtitle">@filterMessage</p>
</div>



<div class="filter-container">
    <div class="filter-section">
        <h3 class="filter-title">Status</h3>
        <div class="status-filters">
            <a href="@BuildUrl("All", Letter, SpeciesFilter, GenderFilter)" class="filter-btn @((string.IsNullOrEmpty(StatusFilter) || StatusFilter == "All") ? "active" : "")">All</a>
            <a href="@BuildUrl("Alive", Letter, SpeciesFilter, GenderFilter)" class="filter-btn alive @(StatusFilter == "Alive" ? "active" : "")">Alive</a>
            <a href="@BuildUrl("Dead", Letter, SpeciesFilter, GenderFilter)" class="filter-btn dead @(StatusFilter == "Dead" ? "active" : "")">Dead</a>
            <a href="@BuildUrl("unknown", Letter, SpeciesFilter, GenderFilter)" class="filter-btn unknown @(StatusFilter == "unknown" ? "active" : "")">Unknown</a>
        </div>
    </div>
    
    <div class="filter-section">
        <h3 class="filter-title">Letters</h3>
        <div class="letter-filters">
            @foreach (var letter in "ABCDEFGHIJKLMNOPQRSTUVWXYZ")
            {
                <a href="@BuildUrl(StatusFilter, letter.ToString(), SpeciesFilter, GenderFilter)" class="letter-btn @(Letter == letter.ToString() ? "active" : "")">@letter</a>
            }
            @if (!string.IsNullOrEmpty(Letter))
            {
                <a href="@BuildUrl(StatusFilter, null, SpeciesFilter, GenderFilter)" class="filter-btn clear">Clear Letter</a>
            }
        </div>
    </div>
    
    <div class="filter-section">
        <h3 class="filter-title">Species</h3>
        <div class="species-filters">
            @foreach (var species in availableSpecies)
            {
                <a href="@BuildUrl(StatusFilter, Letter, species, GenderFilter)" class="filter-btn species @(SpeciesFilter == species ? "active" : "")">@species</a>
            }
            @if (!string.IsNullOrEmpty(SpeciesFilter))
            {
                <a href="@BuildUrl(StatusFilter, Letter, null, GenderFilter)" class="filter-btn clear">Clear Species</a>
            }
        </div>
    </div>
    
    <div class="filter-section">
        <h3 class="filter-title">Gender</h3>
        <div class="gender-filters">
            @foreach (var gender in availableGenders)
            {
                <a href="@BuildUrl(StatusFilter, Letter, SpeciesFilter, gender)" class="filter-btn gender @(GenderFilter == gender ? "active" : "")">@gender</a>
            }
            @if (!string.IsNullOrEmpty(GenderFilter))
            {
                <a href="@BuildUrl(StatusFilter, Letter, SpeciesFilter, null)" class="filter-btn clear">Clear Gender</a>
            }
        </div>
    </div>
    
   
</div>

@if (filteredCharacters == null || !filteredCharacters.Any())
{
    <div class="no-results">
        <p>No characters found</p>
    </div>
}
else
{
    <div class="characters-grid">
        @foreach (var c in filteredCharacters)
        {
            <div class="character-card">
                <div class="character-image">
                    <img src="@c.Image" alt="@c.Name" />
                    <div class="status-badge @c.Status.ToLower()">@c.Status</div>
                </div>
                <div class="character-info">
                    <NavLink href="@($"/CharacterDetails/{c.Id}")" class="character-name">@c.Name</NavLink>
                    <p class="episode-count">@c.Episode.Count episodes</p>
                </div>
            </div>
        }
    </div>
}

