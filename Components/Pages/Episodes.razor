@page "/Episodes"
@inject HttpClient Http
@using RickAndMortyAPI.Components.Data
@using Microsoft.AspNetCore.Components.Routing

<div class="hero-header">
    <h1 class="hero-title">Rick and Morty Episodes</h1>
    <p class="hero-subtitle">@episodes.Count total episodes across 5 seasons</p>
</div>

@if (episodes == null || !episodes.Any())
{
    <div class="loading">Loading episodes...</div>
}
else
{
    <div class="seasons-container">
        @foreach (var season in new[] { "S01", "S02", "S03", "S04", "S05" })
        {
            var seasonEpisodes = episodes
                .Where(e => e.episode.StartsWith(season))
                .OrderBy(e => e.id)
                .ToList();

            if (seasonEpisodes.Any())
            {
                <div class="season-card">
                    <div class="season-header">
                        <h2 class="season-title">Season @season.Substring(1)</h2>
                        <span class="episode-badge">@seasonEpisodes.Count episodes</span>
                    </div>
                    <div class="episodes-list">
                        @foreach (var ep in seasonEpisodes)
                        {
                            <NavLink href="@($"/EpisodeDetails/{ep.id}")" class="episode-item">
                                <div class="episode-number">@ep.episode</div>
                                <div class="episode-name">@ep.name</div>
                            </NavLink>
                        }
                    </div>
                </div>
            }
        }
    </div>
}

<style>
    .hero-header {
        text-align: center;
        padding: 40px 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        margin-bottom: 30px;
        box-shadow: 0 10px 40px rgba(102, 126, 234, 0.3);
    }

    .hero-title {
        font-size: 3rem;
        font-weight: 800;
        color: #fff;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .hero-subtitle {
        color: #fff;
        font-size: 1.2rem;
        margin: 10px 0 0 0;
        opacity: 0.9;
    }

    .loading {
        text-align: center;
        padding: 60px 20px;
        font-size: 1.5rem;
        color: #6b7280;
    }

    .seasons-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 25px;
    }

    .season-card {
        background: #fff;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        transition: all 0.3s;
    }

    .season-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(102, 126, 234, 0.3);
    }

    .season-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .season-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #fff;
        margin: 0;
    }

    .episode-badge {
        background: rgba(255,255,255,0.3);
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.85rem;
        color: #fff;
        font-weight: 600;
    }

    .episodes-list {
        padding: 15px;
    }

    .episode-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 12px 15px;
        margin-bottom: 8px;
        border-radius: 10px;
        text-decoration: none;
        transition: all 0.3s;
        background: #f9fafb;
    }

    .episode-item:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        transform: translateX(5px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    }

    .episode-number {
        font-size: 0.85rem;
        font-weight: 600;
        color: #6b7280;
        min-width: 50px;
    }

    .episode-item:hover .episode-number {
        color: #fff;
    }

    .episode-name {
        font-size: 1rem;
        font-weight: 600;
        color: #1f2937;
        flex: 1;
    }

    .episode-item:hover .episode-name {
        color: #fff;
    }
</style>


@code {
    List<Episode> episodes = new();

    protected override async Task OnInitializedAsync()
    {
        string url = "https://rickandmortyapi.com/api/episode";

        while (!string.IsNullOrEmpty(url))
        {
            var response = await Http.GetFromJsonAsync<EpisodeSearchResponse>(url);
            if (response?.results != null)
            {
                episodes.AddRange(response.results);
                url = response.info?.next;
            }
            else
            {
                break;
            }
        }
    }
}