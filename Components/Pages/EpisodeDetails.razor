@page "/EpisodeDetails/{id:int}"
@inject HttpClient Http
@using RickAndMortyAPI.Components.Data

<div class="hero-header">
    <h1 class="hero-title">Episode Details</h1>
</div>

@if (episode == null)
{
    <div class="loading">Loading episode...</div>
}
else
{
    <div class="detail-container">
        <div class="episode-header">
            <div class="episode-badge">@episode.episode</div>
            <div>
                <h2 class="episode-title">@episode.name</h2>
                <p class="air-date">Aired: @episode.air_date</p>
            </div>
        </div>

        <div class="characters-section">
            <h3 class="section-title">Characters (@characters?.Count ?? 0)</h3>
            @if (characters == null)
            {
                <div class="loading-small">Loading characters...</div>
            }
            else
            {
                <div class="characters-grid">
                    @foreach (var c in characters)
                    {
                        <NavLink href="@($"/CharacterDetails/{c.id}")" class="character-card">
                            <img src="@c.image" alt="@c.name" />
                            <div class="character-name">@c.name</div>
                        </NavLink>
                    }
                </div>
            }
        </div>
    </div>
}

<style>
    .hero-header {
        text-align: center;
        padding: 40px 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        margin-bottom: 30px;
        box-shadow: 0 10px 40px rgba(102, 126, 234, 0.3);
    }

    .hero-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: #fff;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .loading, .loading-small {
        text-align: center;
        padding: 60px 20px;
        font-size: 1.5rem;
        color: #6b7280;
    }

    .loading-small {
        padding: 30px 20px;
        font-size: 1.2rem;
    }

    .detail-container {
        background: #fff;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    }

    .episode-header {
        display: flex;
        align-items: center;
        gap: 25px;
        padding: 30px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        margin-bottom: 40px;
    }

    .episode-badge {
        background: rgba(255,255,255,0.3);
        padding: 15px 25px;
        border-radius: 15px;
        font-size: 1.5rem;
        font-weight: 800;
        color: #fff;
    }

    .episode-title {
        font-size: 2rem;
        font-weight: 800;
        color: #fff;
        margin: 0 0 10px 0;
    }

    .air-date {
        font-size: 1.1rem;
        color: #e0e7ff;
        margin: 0;
    }

    .characters-section {
        margin-top: 40px;
    }

    .section-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 25px;
    }

    .characters-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 20px;
    }

    .character-card {
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        transition: all 0.3s;
        text-decoration: none;
    }

    .character-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

    .character-card img {
        width: 100%;
        height: 150px;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .character-card:hover img {
        transform: scale(1.1);
    }

    .character-name {
        padding: 12px;
        text-align: center;
        font-weight: 700;
        color: #1f2937;
        font-size: 0.95rem;
    }

    .character-card:hover .character-name {
        color: #667eea;
    }

    @@media (max-width: 768px) {
        .episode-header {
            flex-direction: column;
            text-align: center;
        }
    }
</style>

@code {
    [Parameter] public int id { get; set; }

    Episode? episode;
    List<Character>? characters;

    protected override async Task OnInitializedAsync()
    {
        episode = await Http.GetFromJsonAsync<Episode>($"https://rickandmortyapi.com/api/episode/{id}");

        if (episode != null && episode.characters.Any())
        {
            var ids = episode.characters.Select(url => url.Split('/').Last()).ToList();
            var idsCsv = string.Join(",", ids);
            characters = await Http.GetFromJsonAsync<List<Character>>($"https://rickandmortyapi.com/api/character/{idsCsv}");
        }
    }

    public class Character
    {
        public int id { get; set; }
        public string name { get; set; } = string.Empty;
        public string image { get; set; } = string.Empty;
    }
}
